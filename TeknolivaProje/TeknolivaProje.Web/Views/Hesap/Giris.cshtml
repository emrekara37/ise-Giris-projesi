@model TeknolivaProje.Web.ViewModels.LoginViewModel

@{

  ViewBag.Title = "Yönetici Girişi";
  Layout = null;
}
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - TMMT Personel Güzergah Sistemi</title>

  <link rel="stylesheet" href="/Content/bootstrap.min.css" />

  <script src="https://use.fontawesome.com/0d7aec69e2.js"></script>
</head>
<body style="background: whitesmoke">

  <div class="container">
    <div class="row" style="margin-top: 100px;">
      <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Sisteme Giriş Yapın</h3>
          </div>
          <div class="panel-body">
            @using (Html.BeginForm("Giris", "Hesap", FormMethod.Post, new { role = "form", id = "GirisForm" }))
            {
              @Html.AntiForgeryToken()


              <fieldset>
                <div class="form-group">

                  @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adı", maxlength = "30" })
                </div>
                <div class="form-group">
                  @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Şifreniz", maxlength = "30" })

                </div>

                <input class="btn btn-success btn-block" type="submit" value="Giriş Yap" id="btnGirisYap">


              </fieldset>
              @Html.ValidationSummary("", new { @class = "text-danger", style = "margin-top:10px;" })
            }
          </div>
        </div>
         @Html.Partial("_Hata")
      </div>
    </div>
  </div>
  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")
  @Scripts.Render("~/bundles/jqueryval")

  <script>
    $(function () {
   
    })
  </script>
</body>

</html>
