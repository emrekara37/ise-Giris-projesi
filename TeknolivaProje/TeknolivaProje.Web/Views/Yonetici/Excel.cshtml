
@{
  ViewBag.Title = "Excele Veri Aktar";
  Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-top: 10px;">


  <div class="row">
    <div class="col-lg-6">
      <h2 class="page-header">
        @ViewBag.Title
      </h2>

    </div>
  </div>
  <div class="row">
    <ul class="list-group">
      <li class="list-group-item">
        Şehirleri Excele İndir &nbsp;<button class="btn btn-success btnExcel">İndir</button>
      </li>
      <li class="list-group-item">
        Güzergah Tipleri Excele İndir <button class="btn btn-success btnExcel">İndir</button>
      </li>
      <li class="list-group-item">
        Güzergahları Excele İndir <button class="btn btn-success btnExcel">İndir</button>
      </li>
      <li class="list-group-item">
        Durakları Excele İndir <button class="btn btn-success btnExcel">İndir</button>
      </li>
      <li class="list-group-item">
        Genel Listeyi Excele İndir <button class="btn btn-success btnExcel">İndir</button>
      </li>
    

    </ul>

  </div>




</div>
@section scripts
{
  <script>
    $(function() {
      $(".btnExcel").on('click',
        function () {
          var btnIndis = $(".btnExcel").index(this);
          window.open("/Yonetici/ExceleAktar/" + btnIndis);
          
        });
    });
  </script>
}
